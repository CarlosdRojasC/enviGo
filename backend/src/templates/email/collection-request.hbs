                <div class="info-label">Contacto:</div>
                <div class="info-value">{{contact_name}}</div>
            </div>
            {{/if}}
            <div class="info-row">
                <div class="info-label">Solicitado:</div>
                <div class="info-value">{{requested_at}}</div>
            </div>
        </div>

        <div class="package-highlight">
